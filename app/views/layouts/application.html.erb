<!DOCTYPE html>
<html>
<head>
  <title>Workspace</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if notice %>
               <p class="notice-alert notice"><%= notice %></p>
              <% end %>
              <% if alert %>
               <p class="notice-alert alert p-1 mb-1"><%= alert %></p>
              <% end %>
<%= yield %>
<% if current_user %>
   Welcom <%= current_user.first_name %> <%= current_user.last_name %>
   <%= link_to 'Edit', edit_user_registration_path, method: "get" ,class: "btn btn-pink"%>
   <%= link_to 'Logout', destroy_user_session_path, method: "delete" ,class: "btn btn-primary"%>
<% end %>  
</body>
</html>
